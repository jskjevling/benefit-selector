package  {		import flash.display.*;	import flash.geom.*;	import flash.events.*;	import flash.net.*;	import flash.text.*;	import fl.transitions.*;	import fl.transitions.easing.*;	import flash.ui.*;		public class LineText extends MovieClip {		internal var main:BenefitCalculator;		internal var inTransition:String;		internal var outTransition:String;		public function LineText() {			init();		}				private function init():void {					}				public function createText(textX:Number, textY:Number, textWidth:Number, textValue:String, txtInTrans:String, txtOutTrans:String):void {			inTransition = txtInTrans;			outTransition = txtOutTrans;			var myFont:Font = new AvenirR(); //create the instance of the embedded font class			var format:TextFormat = new TextFormat(myFont.fontName, 20, 0x666666); //create the text formatting			var t:TextField = new TextField(); //create the text field			t.embedFonts = true; //set it to use embedded fonts			t.defaultTextFormat = format; //apply the text format			t.text = textValue; //set the text value from the XML attribute loaded into a variable			t.selectable = false;			t.sharpness = -100;			t.thickness = 200;			t.x = textX; //set the x position			t.y = textY; //set the y position			t.width = textWidth; //set the width of the display area			main.currentText.addChild(t);			if (inTransition=="BLINK") { //set up the properties for the BLINK transition				main.currentText.alpha = 0;				main.currentText.y = main.currentText.y-50;			} else if (inTransition=="FADE") { //set up the properties of the FADE transition				main.currentText.alpha = 0;			}			main.slideContents.addChild(main.currentText);			main.visualManager.callTextIn(main.currentText);		}	}	}