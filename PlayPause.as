package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;		public class PlayPause extends MovieClip {				private var ppToggle:String;		internal var main:BenefitCalculator;		public function PlayPause() {			init();		}				private function init():void {						//set the toggle variable initial state and add the event listeners for switching the button image						ppToggle = "Pause";			this.gotoAndStop("pauseUp");			this.addEventListener(MouseEvent.MOUSE_OVER, mOver, false, 0, true);			this.addEventListener(MouseEvent.MOUSE_OUT, mOut, false, 0, true);			this.addEventListener(MouseEvent.CLICK, toggleButton, false, 0, true);		}				private function mOver(Event:MouseEvent):void {						//check the value of ppToggle and move to the appropriate frame to show the over state						switch (ppToggle) {				case "Pause":					this.gotoAndStop("pauseOver");					break;								case "Play":					this.gotoAndStop("playOver");					break;			}		}				private function mOut(Event:MouseEvent):void {						//check the value of ppToggle and move to the appropriate frame to show the up state						switch (ppToggle) {				case "Pause":					this.gotoAndStop("pauseUp");					break;								case "Play":					this.gotoAndStop("playUp");					break;			}		}				private function toggleButton(Event:MouseEvent):void {						//check the current value of ppToggle, and switch it to the other value						if (ppToggle == "Pause") {				main.audioManager.stopAudio();				if (main.currentAnimation!=null) {					main.animationManager.pauseAnimation();				}				ppToggle = "Play";			} else {				main.audioManager.playAudio();				if (main.currentAnimation!=null) {					main.animationManager.playAnimation();				}				ppToggle = "Pause";			}						//check the value of ppToggle, and set the new button state to match						switch (ppToggle) {				case "Pause":					this.gotoAndStop("pauseOver");					break;								case "Play":					this.gotoAndStop("playOver");					break;			}		}	}	}